@{
    ViewData["Title"] = "Öğrenci İşlemleri";
}

<h1>Öğrenci İşlemleri</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Ders Seçme</h2>
        <a class="btn btn-primary" href="/OgrenciDers/Index">Ders Seçme</a>
    </div>

    <div class="col-md-6">
        <h2>Seçilen Dersleri Gösterme</h2>
        <form asp-action="SecilenDersleriGoster" method="post">
            <input type="hidden" name="ogrenciId" value="@Model" />
            <button type="submit" class="btn btn-success">Seçilen Dersleri Göster</button>
        </form>
    </div>
</div>
